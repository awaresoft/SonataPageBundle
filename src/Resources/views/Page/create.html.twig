{% extends 'app/template/default_template.html.twig' %}

{% block main_content %}
    <div>
        <h2>{{ "title_page_not_found"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}</h2>

        {% if creatable %}
            <p>
                <a href="{{ path('admin_awaresoft_cms_create', {'url': pathInfo, 'siteId': site.id}) }}">{{ "create_page"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}</a>
            </p>
        {% else %}
            <p>
                {{ "message_page_does_not_exist"|trans({'pathInfo': pathInfo}, 'SonataPageBundle') }}
            </p>
        {% endif%}
    </div>
{% endblock%}
